[CSS PART}
#div{
    animation:fade-in linear;
    animation-timeline: view();

}
@keyframes fade-in{
    from {scale: .8; opacity: 1;}
    to {scale: 1; opacity: 1;}

}
#bt {
    animation: blink 5s infinite;
  }

  @keyframes blink {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

